.chat__main__messages__message{"data-message-id": "#{message.id}"}
  .chat__main__messages__message__upper-message
    .chat__main__messages__message__upper-message__user-name
      = message.user.name
    .chat__main__messages__message__upper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat__main__messages__message__lower-message
    - if message.content.present?
      %p.chat__main__messages__message__lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?